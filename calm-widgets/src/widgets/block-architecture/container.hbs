{{!-- Only emit a subgraph if it has content --}}
{{#if (or (gt (length nodes) 0) (gt (length containers) 0))}}
    subgraph {{id}}["{{label}}"]
    direction TB
    {{#each nodes}}
    {{#if @root.renderNodeTypeShapes}}
        {{> typed-node.hbs}}
    {{else}}
        {{id}}["{{label}}"]:::node
    {{/if}}
        {{#each interfaces}}
            {{id}}["{{label}}"]:::iface
        {{/each}}
    {{/each}}
    {{#each containers}}
        {{> container.hbs}}
    {{/each}}
    end
    class {{id}} boundary
{{/if}}