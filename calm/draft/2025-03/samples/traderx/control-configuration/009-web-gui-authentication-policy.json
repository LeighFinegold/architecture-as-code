{
  "$schema": "https://calm.finos.org/traderx/control-requirement/authentication",
  "$id": "https://calm.finos.org/traderx/control-configuration/009-web-gui-authentication-policy.json",
  "description": "Defines authentication policies for the TraderX Web Client.",
  "control-id": "CONTROL-009",
  "name": "TraderX Web Gui Authentication Control",
  "auth-method": "OAuth",
  "token-expiry": {
    "unit": "minutes",
    "value": 15
  },
  "mfa-required": true,
  "sso-enabled": true,
  "refresh-tokens": true,
  "token-revocation": true
}