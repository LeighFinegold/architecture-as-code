{
  "$schema": "https://calm.finos.org/traderx/control-requirement/authentication",
  "$id": "https://calm.finos.org/traderx/control-configuration/003-traderx-system-authentication-policy.json",
  "description": "Defines authentication requirements for TraderX.",
  "control-id": "CONTROL-003",
  "name": "TraderX Authentication Control",
  "auth-method": "OAuth",
  "token-expiry": {
    "unit": "minutes",
    "value": 15
  },
  "mfa-required": true,
  "sso-enabled": true,
  "refresh-tokens": true,
  "token-revocation": true
}