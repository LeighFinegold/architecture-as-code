title Container diagram for {{name}}
{{#each nodes}}
    {{#if (eq node-type "actor")}}
        Person({{unique-id}}, "{{name}}", "{{description}}")
    {{else if (eq node-type "database")}}
        ContainerDb({{unique-id}}, "{{name}}", "", "{{description}}")
    {{else if (eq node-type "system")}}
    {{else}}
        Container({{unique-id}}, "{{name}}", "", "{{description}}")
    {{/if}}
{{/each}}

{{#each (getConnectRelationships relationships)}}
    Rel({{relationship-type.connects.source.node}}, {{relationship-type.connects.destination.node}}, "{{description}}")
{{/each}}

{{#each (getInteractRelationships relationships)}}
    {{#each relationship-type.interacts.nodes}}
        Rel({{../relationship-type.interacts.actor}}, {{this}}, "{{../description}}")
    {{/each}}
{{/each}}

