apiVersion: apps/v1
kind: Deployment
metadata:
    name: {{name}}
spec:
    replicas: 1
    selector:
        matchLabels:
            app: {{name}}
    template:
        metadata:
            labels:
                app: {{name}}
        spec:
            containers:
                {{#each containers}}
                - name: {{this.name}}
                  image: {{this.image}}
                  ports:
                      {{#each this.ports}}
                      - containerPort: {{this}}
                      {{/each}}
                {{/each}}
